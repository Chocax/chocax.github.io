---
import { ViewTransitions } from 'astro:transitions';
interface HeaderProps {
  title: string;
}
const { title } = Astro.props as HeaderProps;
---

<head>
  <meta charset="utf-8" />
  <title>{title}</title>
  <ViewTransitions />
  
  <meta content={title} property="og:title" />
  <meta content="Portafolio de Ingeniería de Sistemas - Santiago Pinzón" property="og:description" />
  <meta content="/assets/tu-foto.jpg" property="og:image" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />

  <link href="/assets/styles.css" rel="stylesheet" type="text/css" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

  <script type="text/javascript">
    !(function (o, c) {
      var n = c.documentElement,
        t = " w-mod-";
      (n.className += t + "js"), ("ontouchstart" in o || (o.DocumentTouch && c instanceof DocumentTouch)) && (n.className += t + "touch");
    })(window, document);
  </script>

  <link href="/assets/tu-foto.jpg" rel="shortcut icon" type="image/x-icon" />
  <link href="/assets/tu-foto.jpg" rel="apple-touch-icon" />
</head>

<style is:global>
  body {
    font-family: 'Inter', sans-serif;
    background-color: #0a0a0a; 
    color: #e0e0e0;
  }
</style>